#include <iostream>
using namespace std;
void swap(int x, int y) {
int temp = x;
x = y;
y = temp;
}
int main() {
int a = 40;
int b = 50;
cout << "Before swap: a = " << a << " b = " << b << endl;
swap(a, b);
cout << "After swap: a = " << a << " b = " << b << endl;
return 0;
}
//Program – Call by Reference:
#include <iostream>
using namespace std;
void swap(int *a, int *b) {
  int temp = *a;
*a = *b;
*b = temp;
}
int main() {
int x = 5;
int y = 10;
cout << "Before swap: x = " << x << " , y = " << y << endl;
swap(&x, &y);
cout << "After swap: x = " << x << ", y = " << y << endl;
return 0;
}
// Sample Output – Call by Value:
// Before swap: a = 40 b = 50
// After swap: a = 40 b = 50
// Sample Output – Call by Reference:
// Before swap: x = 5 , y = 10
// After swap: x = 10, y = 5
